{
	"name": "template-common",
	"version": "1.0.0",
	"private": true,
	"description": "basic template common",
	"license": "ISC",
	"author": "duck",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build:dev": "rojo build -o build.rbxl",
		"build:prod": "rojo build production.project.json -o build.rbxl",
		"compile": "rbxtsc",
		"postinstall": "patch-package && node check-dependencies.js",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"prepare": "husky",
		"process": "darklua process out out && darklua process include include",
		"sourcemap": "lune run sync src/services.d.ts",
		"start": "start build.rbxl && concurrently --kill-others \"rbxtsc -w\" \"rojo serve\"",
		"pretest": "npm run build:dev",
		"test": "lune run execute-tests"
	},
	"lint-staged": {
		"*": "eslint --fix"
	},
	"dependencies": {
		"@flamework/core": "catalog:prod",
		"@rbxts/jest": "catalog:prod",
		"@rbxts/jest-globals": "catalog:prod",
		"@rbxts/react": "catalog:prod",
		"@rbxts/react-roblox": "catalog:prod",
		"@rbxts/services": "catalog:prod",
		"@rbxts/ui-scaler": "catalog:prod"
	},
	"devDependencies": {
		"@antfu/ni": "catalog:script",
		"@commitlint/cli": "catalog:script",
		"@commitlint/config-conventional": "catalog:script",
		"@commitlint/prompt-cli": "catalog:script",
		"@commitlint/types": "catalog:script",
		"@eslint/config-inspector": "catalog:lint",
		"@isentinel/eslint-config": "catalog:lint",
		"@isentinel/tsconfig": "catalog:types",
		"@rbxts/compiler-types": "catalog:types",
		"@rbxts/types": "catalog:types",
		"eslint": "catalog:lint",
		"eslint-plugin-pnpm": "catalog:lint",
		"eslint-plugin-react-hooks": "catalog:lint",
		"eslint-plugin-react-naming-convention": "catalog:lint",
		"eslint-plugin-react-roblox-hooks": "catalog:lint",
		"eslint-plugin-react-x": "catalog:lint",
		"git-pull-run": "catalog:script",
		"husky": "catalog:script",
		"jiti": "catalog:script",
		"lint-staged": "catalog:lint",
		"patch-package": "catalog:script",
		"rbxts-build": "catalog:script",
		"rbxts-transform-debug": "catalog:build",
		"rbxts-transform-env": "catalog:build",
		"rbxts-transformer-flamework": "catalog:build",
		"rimraf": "catalog:script",
		"roblox-ts": "catalog:build",
		"ts-plugin-sort-import-suggestions": "catalog:types",
		"typescript": "catalog:types"
	},
	"trustedDependencies": ["husky"]
}
